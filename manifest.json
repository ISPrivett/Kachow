{
  "manifest_version": 3,
  "name": "Dynamic Image Extension",
  "version": "1.0",
  "description": "Shows a dynamic image based on user-defined URL and query",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {

    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
