{
    "manifest_version": 3,
    "name": "Lightning Image Extension",
    "version": "1.0",
    "description": "Shows a lightning image on text input containing 'lightning'.",
    "permissions": ["activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  